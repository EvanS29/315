<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MazeSolverScreen" >

    <Button
        android:id="@+id/solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/setGoal"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="17dp"
        android:text="Solve" />

    <Button
        android:id="@+id/eraseWalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drawWalls"
        android:layout_centerVertical="true"
        android:text="Erase" />

    <sofia.graphics.ShapeView
        android:id="@+id/shapeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/setGoal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/infoLabel" />

    <Button
        android:id="@+id/drawWalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eraseWalls"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="Draw" />

    <Button
        android:id="@+id/setGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setStart"
        android:layout_below="@+id/setStart"
        android:text="Goal" />

    <Button
        android:id="@+id/setStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eraseWalls"
        android:layout_below="@+id/eraseWalls"
        android:text="Start" />

    <TextView
        android:id="@+id/infoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/solve"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>